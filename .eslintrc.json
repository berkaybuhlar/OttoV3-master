{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars":"warn",
        "max-len":"warn",
        "linebreak-style":"off",
        "no-tabs":"off",
        "no-mixed-spaces-and-tabs":"off",
        "react/react-in-jsx-scope": "off",
        "semi":["error","never"],
        "quotes":"off",
        "object-curly-spacing":["error","always"],
        "comma-dangle":["error","never"],
        "arrow-spacing": ["error", { "before": true, "after": true }],
        "space-infix-ops":"off",
        "react/display-name": "off"
    }
}
